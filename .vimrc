"change name to .vimrc and put it in home directory to use.

" WINDOW SPLITTING -----------------------

" Put new split below or to right
set splitbelow
set splitright

" ~WINDOW SPLITTING ----------------------

" INDENTATION ----------------------------
 
" Indentation settings for using 4 spaces instead of tabs.
" Do not change 'tabstop' from its default value of 8 with this setup.
set shiftwidth=4
set softtabstop=4
set expandtab

" ~INDENTATION ---------------------------

" LINE NUMBERS/LENGTH --------------------

" Display line numbers on the left
set number

" Display cursor position on the last line of the screen or in the
" status line of window
set ruler

" display line at column 79
"set colorcolumn=79

" ~LINE NUMBERS/LENGTH -------------------

" COLOR SCHEME ---------------------------

" Change colorscheme
"   Options: ls /usr/share/vim/vim74/colors/
colorscheme torte

" Enable syntax highlighting
syntax enable

" ~COLOR SCHEME --------------------------   


" SEARCH SETTINGS ------------------------

"  case insensitive
set ignorecase

" use case if any caps used
set smartcase

" display search highlighting
set hlsearch

" ~SEARCH SETTINGS -----------------------

